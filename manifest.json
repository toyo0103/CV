{
  "name": "CV",
  "version": "1.0",
  "description": "打造FB商品王國!",
  "permissions":["activeTab","declarativeContent","storage","contextMenus"],
  "background":{
    "scripts":["background.js"]
  },
  "content_scripts":[
    {
      "matches":["https://*/*"],
      "js":["js/jquery.min.js","js/myscript.js"]
    }
  ],
  "options_page": "options.html",
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/16.png",
      "32": "images/32.png",
      "48": "images/48.png",
      "128": "images/128.png"
    }
  },
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "manifest_version": 2
}
